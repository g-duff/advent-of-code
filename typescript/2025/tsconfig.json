{
  "extends": "./tsconfig.base.json",
  // match output dir to input dir. e.g. dist/index instead of dist/src/index
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true
    "erasableSyntaxOnly": true,
    "paths" : {
      "#src/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
